CC=gcc
BINDIR=/Users/kenkoch/research/qdbm/XSB/config/i386-apple-darwin10.8.0/bin
OBJDIR=/Users/kenkoch/research/qdbm/XSB/config/i386-apple-darwin10.8.0/saved.o
mno_cyg_inclib=
LDFLAGS=  -lm
CFLAGS=
WIN_NT_FLAG=

all: prepare gpp install

gpp: gpp.o
	@echo -e "\t[$(CC)] -o gpp"
	@$(CC) $(LDFLAGS) -o gpp $(OBJDIR)/gpp.o

gpp.o: gpp.c
	@echo -e "\t[$(CC)] gpp.c using $(CFLAGS) $(WIN_NT_FLAG)"
	@$(CC) $(CFLAGS) $(WIN_NT_FLAG) -c $(mno_cyg_inclib) gpp.c
	@mv -f gpp.o $(OBJDIR) || echo ""

prepare:
	@ln $(OBJDIR)/gpp.o . 2> /dev/null || echo ""

install:
	@mv -f gpp $(BINDIR) 2> /dev/null || echo ""
	@mv -f gpp.exe $(BINDIR) 2> /dev/null || echo ""
	@rm -f gpp.o
